---
import Header from "@components/header/Header.astro";
---

<style>
.h-hero {
  height: calc(100% - 68px);
}
</style>

<div class="w-full h-[480px] tablet:h-screen bg-hero-mobile tablet:bg-hero-desktop bg-cover bg-center">
  <Header />

  <div class="w-full h-hero flex flex-col items-center justify-center">
    <section class="h-fit w-fit flex flex-col gap-8 tv:gap-16 items-center">
      <h1 class="text-center text-5xl tv:text-7xl font-fraunces-700 uppercase text-white">we are creatives</h1>
      <img src="/icon/icon-arrow-down.svg" alt="Arrow down icon" class="tv:w-[72px] tv:h-[228px]" width="36" height="114">
    </section>
  </div>
</div>